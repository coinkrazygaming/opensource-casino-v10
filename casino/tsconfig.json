{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ES2018",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/ts/*"]
    }
  },
  "include": [
    "resources/ts/**/*",
    "resources/ts/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    "vendor"
  ]
}